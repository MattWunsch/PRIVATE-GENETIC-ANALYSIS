{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./automation/**/*",
    "./hardhat.config.ts"
  ],
  "exclude": ["node_modules", "dist", "cache", "artifacts", "coverage"]
}
